# read: https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Microsoft Keyboard Layout Creator
[*.klc]
charset = utf-16le
indent_style = tab
indent_size = unset
tab_width = unset
end_of_line = crlf

# More Microsoft files
[{*.bat, *.cmd, *.ps1}]
end_of_line = crlf
